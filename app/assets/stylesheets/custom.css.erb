html, body {
  height: 100%;
}

#wrapper {
  min-height: 100%;
  position:   relative;
  background: url("<%= asset_path('blue_chart.jpg') %>");
}

/* navigation */

.navbar {
  height:        50px;
  margin-bottom: 0;
  background:    black;
  border:        none;
  }

.navbar a {
  color: #fff;
}

#landing-title {
  color: #fff;
}

#login {
  padding-top: 15px;
  float:       right;
  font-size:   18px;
}

/* landing page */

#title {
  font-size:     74px;
  color:         #fff;
  font-family:   'Michroma';
  text-align:    center;
  margin-top:    210px;
  margin-bottom: 25px;
  text-shadow:   8px 8px 8px black;
}

.scrolling {
  background: black;
  height:     35px;
}

.scrolling_words {
  color:       #10E843;
  font-family: 'Orbitron';
  margin-top:  5px;
  font-size:   20px;
}

.landing-drop {
  margin-top: 35px;
  background: black;
}

/* marquee on landing page */

marquee {
color:     #fff;
font-size: 25px;
}

/* show page */

.home-page {
  color: #fff;
}

.articles-heading {
  color:            black;
  background-color: #fff;
  border:           solid black;
  height:           50px;
  padding-top:      8px;
}

.company-title {
  color:            black;
  background-color: #fff;
  border:           solid black;
  height:           50px;
  margin-left:      -15px;
  margin-right:     -15px;
  padding-top:      8px;
}

.tweets-heading {
  color:            black;
  background-color: #fff;
  border:           solid black;
  height:           50px;
  padding-top:      8px;
}

.articles-body {
  background-color: #fff;
  height:           400px;
  overflow:         scroll;
  padding:          10px;
  border:           solid black;
}

.sentiment-score {
  height:  200px;
  padding: 35px;
  border:  solid black;
}

.stock-price {
  height:  200px;
  border:  solid black;
}

.stock-data {
  border: solid black;
  height: 100px;
  background-color: #fff;
  padding-top: 23px;
}

.tweets {
  background-color: #fff;
  height:           400px;
  overflow:         scroll;
  padding:          10px;
  border:           solid black;
}

.home-search-field {
  text-align: center;
}

.news-feed a {
  color:      #fff;
  background: black;
}

.news-feed li {
  border: solid #fff 1px;
}

/* footer */

#footer {
  height:     50px;
  position:   absolute;
  bottom:     0;
  background: black;
  width:      100%;
}

.footer-row {
  padding: 15px;
}

.footer-text {
  text-align: center;
}

.footer-text a {
  color: #fff;
}
