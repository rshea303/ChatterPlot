<div id="container" data-array="<%= @company_names %>" style="width:auto; height:300px;"></div>
<script>
  $(function () {
      $('#container').highcharts({
          chart: {
              type: 'column'
          },
          title: {
              text: 'Sentiment Scores of Top 10 Companies'
          },
          subtitle: {
              text: 'Source: Twitter'
          },
          xAxis: {
            //categories: ["MicroSoft", 'Google', 'Amazon', 'Yahoo', 'Coca-Cola',
             //          'IBM', 'Disney', 'WalMart', 'Exxon', 'Apple']
              categories: $('#container').data('array')
          },
          yAxis: {
              min: 0,
              title: {
                  text: 'Sentiment Score',
                  align: 'middle'
              },
          },
          plotOptions: {
              bar: {
                  dataLabels: {
                      enabled: true
                  }
              }
          },
          series: [{
            data: <%= @company_scores %>
          }]
      });
  });
</script>
