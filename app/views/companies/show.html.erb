<div class="container" style="padding: 12px;">
  <div class="row">
    <div class="row">
      <div class="text-center col-xs-8 col-xs-offset-2">
        <h1 style="color: #fff"><%= @company.name.capitalize %> (<%= @company.ticker_symbol %>)</h1>
      </div>
    </div>
      <div class="text-left col-xs-8 col-xs-offset-2" style="background-color: #fff; height: 500px; overflow: scroll;"> 
        <h3 style="color: black">Relevant News Articles that include mentions of <%= @company.name.capitalize %></h3>
        <% @articles.each do |article| %>
          <p style="color: black">
          <a href=<%= article['link'] %> target="_blank"><%= article['title'] %></a>
          </p>
        <% end %>
      </div>
  </div>
</div>
  
