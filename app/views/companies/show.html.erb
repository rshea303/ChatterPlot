<div class="container" style="padding: 12px;">
  <div class="row">

    <div class="row">
      <div class="col-xs-4">
        <h3 class="text-center" style="color: black; background-color: #fff; border: solid black; height: 50px; padding-top: 8px;">Relevant Articles</h3>
      </div>

      <div class="text-center col-xs-4">
        <h3 class="text-center" style="color: black; background-color: #fff; border: solid black; height: 50px; margin-left: -15px; margin-right: -15px; padding-top: 8px;"><%= @dashboard.company_name.capitalize %> (<%= @dashboard.ticker_symbol %>)</h3>
      </div>

      <div class="col-xs-4">
        <h3 class="text-center" style="color: black; background-color: #fff; border: solid black; height: 50px; padding-top: 8px;">Most Recent Tweets</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4">
        <div class="text-left" style="background-color: #fff; height: 400px; overflow: scroll; padding: 10px; border: solid black;"> 
          <% @dashboard.articles.each do |article| %>
            <p style="color: black">
            <a href=<%= article['link'] %> target="_blank"><%= article['title'] %></a>
            </p>
          <% end %>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="row">
          <div class="text-center" style="background-color: <%= @dashboard.color %>; height: 200px; padding: 35px; border: solid black;"> 
            <h2>Sentiment score</h2>
            <h2><%= @dashboard.score %></h2>
          </div>
        </div>

        <div class="row">
          <div class="text-center" style="background-color: <%= @dashboard.stock_price_color %>; height: 200px; padding: 35px; border: solid black;"> 
            <h2>Stock Price</h2>
            <h2><%= number_to_currency(@dashboard.stock_price, precision: 2) %></h2>
          </div>
        </div>
      </div>

      <div class="col-xs-4">
        <div class="text-left" style="background-color: #fff; height: 400px; overflow: scroll; padding: 10px; border: solid black;"> 
              <ul>
                <% @dashboard.tweets.each do |tweet| %>
                  <li><a href=<%= "https://www.twitter.com/#{tweet.user.screen_name}" %> target="_blank"><%= tweet.text %></a></li><br>
              </ul>
            <% end %>
          </div>
      </div>
    </div>
        
  </div>
</div>
  
