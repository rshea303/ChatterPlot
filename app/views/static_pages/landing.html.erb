<div id="landing-image">
  <div class="container">
    <div class="col-xs-12">
      <div id="title">
        ChatterPlot
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3"></div>
      <div class="col-xs-6 scrolling">
        <marquee class="scrolling_words" scrollamount='12'>Welcome to ChatterPlot... where daily chatter moves the market...</marquee>
      </div>
      <div class="col-xs-3"></div>
    </div>
    <div class="row" style="margin-top: 45px;">
      <div class="col-xs-12 home-search-field">
        <div class="text-center col-xs-6 col-xs-offset-3">
          <%= form_tag("/search", method: "get") do %>
            <%= text_field_tag(:q) %>
            <%= submit_tag("Search") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
